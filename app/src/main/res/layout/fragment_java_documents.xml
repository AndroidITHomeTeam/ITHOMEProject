<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mobile.MobileLessonsFragments.JavaDocumentsFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/javaDocToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF3F51B4"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/javaDocTextID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ITHOME"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/javaDoctoolbarBackID"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_gravity=""
                android:src="@drawable/back" />

        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/downloadBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/javaDocToolbar"
        android:layout_gravity="end"
        android:background="#aabccc"
        android:text="download pdf" />
</RelativeLayout>