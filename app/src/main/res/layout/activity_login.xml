<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginConteiner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_backgrountd"
    tools:context=".Activity.LoginActivity">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/logoLineralID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logoID"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/ithome" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/logoLineralID"
                    android:layout_margin="10dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:textColor="#302b2c"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <EditText
                        android:drawableLeft="@drawable/email_icon"
                        android:id="@+id/loginEmailID"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/capsule"
                        android:hint="  email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorHint="#484a4d" />

                    <EditText
                        android:drawableLeft="@drawable/password_icon"
                        android:id="@+id/loginPasswordeID"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/capsule"
                        android:hint="  password"
                        android:inputType="textPassword"
                        android:textColorHint="#484a4d" />

                    <Button
                        android:id="@+id/btnLogInID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_capsule"
                        android:text="@string/log_in"
                        android:textColor="#211e1e" />

                    <TextView
                        android:id="@+id/btnForgotID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="Forgot your password?"
                        android:textColor="#577ebe" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginTop="55dp"
                            android:id="@+id/GoToSignUpID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/sign_up"
                            android:textColor="#081c3d"
                            android:textSize="25dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>


</RelativeLayout>