<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7E4F7"
    tools:context=".Fragment.ResetPasswordFragment">

    <LinearLayout
        android:id="@+id/resetLineralID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoID"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ithome" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/resetLineralID"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/reset_your_password"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username or Email"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/profileEmailID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username/Email" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/profilePasswordID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/profileConfirmPasswordID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnResetPasswordID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_capsule"
            android:text="Resset Password" />
    </LinearLayout>

</RelativeLayout>