<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mobile.MobileLessonsFragments.JavaTestsFragment">

    <TextView
        android:id="@+id/countID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countID"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questionID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#dadaea88"
            android:gravity="center_horizontal"
            android:text="Question"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Choose correct answer below"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearButtonID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearTextID"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/answare1ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#FF0000FF"
            android:text="answare1"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/answare2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#FF0000FF"
            android:text="answare2"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/answare3ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#FF0000FF"
            android:text="answare3"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/answare4ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#FF0000FF"
            android:text="answare4"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>