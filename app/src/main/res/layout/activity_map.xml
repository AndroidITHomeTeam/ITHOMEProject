<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.MapActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        tools:context=".MapActivity" />

    <ImageView
        android:id="@+id/gpsIconID"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/gps_image_icon" />


    <RelativeLayout
        android:background="@drawable/login_backgrountd"
        android:layout_below="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">
            <LinearLayout
                android:background="#d9b2b2"
                android:layout_margin="10dp"
                android:id="@+id/about_bottomID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/call_image_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:src="@drawable/call" />
                    <TextView
                        android:id="@+id/call_text-id"
                        android:textStyle="bold"
                        android:layout_marginStart="45dp"
                        android:layout_gravity="center"
                        android:text="+37499495968"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mail_image_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/gmail" />
                    <TextView
                        android:id="@+id/mail_text_id"
                        android:layout_marginStart="45dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="it.home.programming@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/facebook_image_id"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/facebook" />
                    <TextView
                        android:id="@+id/facebook_text-id"
                        android:textStyle="bold"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="center"
                        android:text="https://www.facebook.com/ithomepage/"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/address_image_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/address" />
                <TextView
                    android:id="@+id/address_text-id"
                        android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center"
                    android:text="Նաիրի Զարյան 73/1, Yerevan, Armenia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/web_image_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/web_address" />
                    <TextView
                        android:id="@+id/web_text-id"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:layout_gravity="center"
                        android:text="http://www.it-home.am/"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>